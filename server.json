{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-10-17/server.schema.json",
  "name": "io.github.rosch100/mcp-encrypted-sqlite",
  "description": "MCP server for encrypted SQLite databases (SQLCipher 4) - Works with MoneyMoney, KeePass and more",
  "repository": {
    "url": "https://github.com/rosch100/mcp-encrypted-sqlite",
    "source": "github"
  },
  "version": "0.3.2",
  "packages": [
    {
      "registryType": "oci",
      "identifier": "ghcr.io/rosch100/mcp-encrypted-sqlite:0.3.2",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "Path to the encrypted SQLite database file",
          "isRequired": true,
          "format": "string",
          "isSecret": false,
          "name": "DB_PATH"
        },
        {
          "description": "Passphrase for decrypting the database",
          "isRequired": true,
          "format": "string",
          "isSecret": true,
          "name": "DB_PASSPHRASE"
        }
      ],
      "installation": {
        "type": "source",
        "instructions": "Build the project with: ./gradlew installDist"
      },
      "configuration": {
        "mcpServers": {
          "encrypted-sqlite": {
            "command": "/Users/roschmac/Entwicklung/Python/mcp-encrypted-sqlite/run-mcp-server.sh",
            "args": [
              "--args",
              "{\"db_path\":\"${DB_PATH}\",\"passphrase\":\"${DB_PASSPHRASE}\"}"
            ]
          }
        }
      }
    }
  ]
}
